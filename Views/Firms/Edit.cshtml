@model FakturiSecond.Firm

@{
    ViewBag.Title = "Промени податоци за компанија";
    Layout = "~/Views/Dashboard/Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Firms", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Firm_ID)


        <div class="col-md-10">

            <table class="table" align="center">
                <tr>
                    <td colspan="6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Firm_Name, "Назив на компанија", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Firm_Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Firm_Name, "", new { @class = "text-danger" })
                        </div>
                    </td>
                    <td colspan="6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Firm_PhoneNumber, "Телефонски број", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Firm_PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Firm_PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Firm_Email, "Е-маил", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Firm_Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Firm_Email, "", new { @class = "text-danger" })
                        </div>
                    </td>
                    <td colspan="6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Firm_Password, "Лозинка", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Firm_Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Firm_Password, "", new { @class = "text-danger" })
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Firm_Address, "Адреса на компанија", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Firm_Address, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Firm_Address, "", new { @class = "text-danger" })
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Firm_CityPostCode, "Поштенски број", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Firm_CityPostCode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Firm_CityPostCode, "", new { @class = "text-danger" })
                        </div>
                    </td>
                    <td colspan="5">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Firm_City, "Град", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Firm_City, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Firm_City, "", new { @class = "text-danger" })
                        </div>
                    </td>
                    <td colspan="5">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Firm_State, "Држава", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Firm_State, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Firm_State, "", new { @class = "text-danger" })
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Firm_WebPage, "Веб страна", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Firm_WebPage, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Firm_WebPage, "", new { @class = "text-danger" })
                        </div>
                    </td>
                    <td colspan="6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Firm_TFN, "Даночен број (TFN)", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Firm_TFN, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Firm_TFN, "", new { @class = "text-danger" })
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Firm_TransactionAccount, "Трансакциска сметка", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Firm_TransactionAccount, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Firm_TransactionAccount, "", new { @class = "text-danger" })
                        </div>
                    </td>
                    <td colspan="6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Firm_Bank, "Банка", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Firm_Bank, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Firm_Bank, "", new { @class = "text-danger" })
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="6">
                        @Html.LabelFor(model => model.Firm_Logo, "Лого", htmlAttributes: new { @class = "control-label" })
                        <div class="form-group">
                            <img src="~/images/FirmLogo/@Model.Firm_Logo" width="200" height="200" />
                            <input type="file" id="fileLogo" name="fileLogo" />
                        </div>
                    </td>
                    <td colspan="6">
                        @Html.LabelFor(model => model.Firm_Signature, "Електронски потпис", htmlAttributes: new { @class = "control-label" })
                        <div class="form-group">
                            <img src="~/images/FirmSignature/@Model.Firm_Signature" width="200" height="200" />
                            <input type="file" id="fileSignature" name="fileSignature" />
                        </div>

                    </td>
                </tr>
            </table>
            <hr />
        </div>

       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Зачувај" class="btn btn-outline-success btn-lg" />
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
